{% extends "base" %}

{% block content %}
  <main>
    <h2>Searching for "{{query}}"</h2>
    {% if verses %}
      <ul>
        {% for v in verses %}
          <li>
            <a href="/book/{{v.slug}}/{{v.chapter}}">
              {{v.book}} {{v.chapter}}:{{v.verse}}
            </a>
            <br />
            {{v.content}}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </main>
{% endblock content %}
